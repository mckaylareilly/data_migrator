<h1>Documents</h1>

<%= link_to 'Upload New Document', new_document_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Upload Start</th>
      <th>Upload End</th>
      <th>Number of Patients</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.file_name %></td>
        <td><%= document.upload_start %></td>
        <td><%= document.upload_end %></td>
        <td><%= document.number_of_patients %></td>
        <td><%= document.status %></td>
        <td>
          <%= link_to 'Show', document_path(document) %>
          <%= link_to 'Destroy', document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>