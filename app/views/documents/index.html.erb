<h1 class="text-center">Documents</h1>

<div class="mb-3">
  <%= link_to 'Upload New Document', new_document_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead class="table-light">
    <tr>
      <th>File Name</th>
      <th>Upload Start</th>
      <th>Upload End</th>
      <th>Number of Patients</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.file_name %></td>
        <td><%= document.upload_start&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= document.upload_end&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= document.number_of_patients %></td>
        <td><%= document.status %></td>
        <td>
          <%= link_to 'Show', document_path(document), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>