<div class="container mt-4">
  <h1 class="text-center">Upload a Document</h1>

  <div class="d-flex flex-column align-items-center">
    <%= form_with model: @document, url: documents_path, local: true, multipart: true do |form| %>
      <% if @document.errors.any? %>
        <div class="alert alert-danger">
          <h4>Errors:</h4>
          <ul>
            <% @document.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= form.label :file, "Select a CSV file", class: "form-label" %>
        <%= form.file_field :file, required: true, accept: '.csv', class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Upload Document", class: "btn btn-primary me-2" %>
        <%= link_to 'Back to Documents', documents_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>