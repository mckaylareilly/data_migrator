<h1>Upload a Document</h1>

<%= form_with model: @document, url: documents_path, local: true, multipart: true do |form| %>
  <% if @document.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errors:</h4>
      <ul>
        <% @document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :file, "Select a CSV file" %>
    <%= form.file_field :file, required: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Upload Document", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Documents', documents_path, class: "btn btn-secondary" %>